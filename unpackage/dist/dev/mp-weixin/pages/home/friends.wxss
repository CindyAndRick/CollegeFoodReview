
.newFirendArea{
	background-image: linear-gradient(to right, #dcffc5 0%, #ffcc8c  51%, #ffc27c  100%);
	margin: 10px;
	padding: 5px 20px;
	text-align: center;
	text-transform: uppercase;
	transition: 0.5s;
	background-size: 200% auto;
	color: white;            
	box-shadow: 0 0 20px #eee;
	border-radius: 10px;
	display: block
}
